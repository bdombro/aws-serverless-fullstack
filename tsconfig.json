{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "allowUnreachableCode": true,
    "lib": ["ES2019", "DOM"],
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
